#include <stdio.h>
int main() {
    int i,k,max=0;
    float sum=0;
    printf("Enter list of numbers:\n");
    for(i=1;i<=4;i++)
    {
        scanf("%d", &k);
        if (k>max)
        {
            max =k;
        }
        sum = sum + k;
    }
    printf("The max number is %d\n",max);
    printf("The average of list is %f",sum/4);
    return 0;
}
