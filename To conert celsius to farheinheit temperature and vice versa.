#include <stdio.h>
int main  () {
    float c, f;
    printf("Enter the temperature in Celsius: ");
    scanf("%f", &c);
    f = ( c * 9 / 5 ) + 32;
    printf("Celsius to Farheinheit: %f",f);
    printf("\nEnter temperature in Farheinheit: ");
    scanf("%f", &f);
    c= ( f - 32 ) * 5 / 9;
    printf("Farheinheit to Celsius: %f\n", c);
    return 0;
}
